@model Kladionica.Models.OkladaViewModel

@{
    ViewData["Title"] = "Delete Oklada";
}

<h1>Delete Oklada</h1>

<h4>Oklada</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oklada.Ulog)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oklada.Ulog)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oklada.TipOklade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oklada.TipOklade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oklada.Datum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oklada.Datum)
        </dd>
        <dt class="col-sm-2">
            Korisnik
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oklada.Korisnik.Ime) @Html.DisplayFor(model => model.oklada.Korisnik.Prezime)
        </dd>
    </dl>
</div>

<h4>Utakmice</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Datum</th>
            <th>Tim1</th>
            <th>Tim2</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Utakmice)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tim1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tim2)
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="oklada.ID" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</form>
