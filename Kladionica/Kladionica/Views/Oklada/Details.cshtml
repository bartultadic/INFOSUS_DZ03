@model Kladionica.Models.OkladaViewModel

@{
    ViewData["Title"] = "Oklada Details";
}

<h1>Oklada Details</h1>

<div>
    <h4>Oklada</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oklada.Ulog)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oklada.Ulog)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oklada.TipOklade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oklada.TipOklade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.oklada.Datum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oklada.Datum)
        </dd>
        <dt class="col-sm-2">
            Korisnik
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.oklada.Korisnik.Ime) @Html.DisplayFor(model => model.oklada.Korisnik.Prezime)
        </dd>
    </dl>
</div>

<h4>Utakmice</h4>
<table class="table">
    <thead>
        <tr>
            <th>Datum</th>
            <th>Tim1</th>
            <th>Tim2</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Utakmice)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tim1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tim2)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model.oklada.ID" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.oklada.ID" class="btn btn-danger">Delete</a>
</div>
